<div class="well">
<h3 align="center">Login to Digg!</h3>

<%= form_for(:session, :html =>{class: "form-horizontal", role:"form"}, url: login_path) do|a| %>

            <div class="form-group">
                <div class="control-label col-sm-2">
            <%= a.label :email %>
                </div>
            <div class="col-sm-10">
            <%= a.email_field :email, class: "form-control", placeholder:  "Enter email", autofocus: true%>
            </div>
            </div>

            <div class="form-group">
                <div class="control-label col-sm-2">
            <%= a.label :password %>
                </div>
            <div class="col-sm-10">
            <%= a.password_field :password, class: "form-control", autocomplete: "off", autofocus: true %>
            </div>
            </div>
            
            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
            <%= a.submit "Login", class:"btn btn-primary btn-lg"%>
                </div>
            </div>
    
    <% end %>
            <div class="col-xs-4 col-xs-offset-2">
            [ <%= link_to "Back", articles_path %> ]
    </div>
</div>