<h3>Listing all articles: </h3>



<div class="form-group">
                <div class="col-sm-9">
                    <%= link_to "Post a new article!", new_article_path,class:"btn btn-primary btn-lg" %>

                </div>
            </div>

<table>
    <tr>
        <th>Title:</th>
        <th>Date created:</th>
        <th>Last updated:</th>
    </tr>
    
    <% @articles.each do|art| %>
    <tr>
        <td><%=art.id%>: <%=art.title%></td>
        <td><%=art.created_at%> | </td>
        <td><%=art.updated_at%></td>
        <td><%=link_to 'Edit', edit_article_path(art)%> | </td>
        <td><%=link_to 'Show', article_path(art)%> | </td>
        <td><%=link_to 'Delete', article_path(art), method: :delete, data: {confirm: "Delete post?"}%></td>
    </tr>
    <% end %>
</table>